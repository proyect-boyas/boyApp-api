{
  "info": {
    "name": "WebSocket Streaming API",
    "description": "API para streaming de video en tiempo real",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "localhost:3000",
      "type": "string"
    },
    {
      "key": "camera_token",
      "value": "TU_TOKEN_CAMARA_AQUI",
      "type": "string"
    },
    {
      "key": "user_token",
      "value": "TU_TOKEN_USUARIO_AQUI",
      "type": "string"
    },
    {
      "key": "camera_id",
      "value": "camara_001",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "üåê WebSocket Endpoints",
      "item": [
        {
          "name": "üìπ Conectar C√°mara (Stream)",
          "request": {
            "url": "ws://{{base_url}}/stream?token={{camera_token}}&cameraId={{camera_id}}",
            "method": "GET",
            "description": "Endpoint para que las c√°maras transmitan video"
          }
        },
        {
          "name": "üì± Conectar Cliente M√≥vil",
          "request": {
            "url": "ws://{{base_url}}/mobile?token={{user_token}}&cameraId={{camera_id}}",
            "method": "GET",
            "description": "Endpoint para que los clientes m√≥viles reciban video"
          }
        }
      ]
    },
    {
      "name": "üìä HTTP Monitoring Endpoints",
      "item": [
        {
          "name": "‚ÑπÔ∏è Informaci√≥n del Sistema",
          "request": {
            "url": "http://{{base_url}}/api/stream/info",
            "method": "GET",
            "description": "Obtener informaci√≥n de endpoints disponibles"
          }
        },
        {
          "name": "üìà Estado en Tiempo Real",
          "request": {
            "url": "http://{{base_url}}/api/stream/status",
            "method": "GET",
            "description": "Obtener estado actual de conexiones WebSocket"
          }
        },
        {
          "name": "‚úÖ Verificar Token C√°mara",
          "request": {
            "url": "http://{{base_url}}/api/stream/verify-camera-token",
